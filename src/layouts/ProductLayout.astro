---
const {
  title = 'Product',
  description = '',
  heroTitle = title,
  heroSubtitle = '',
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />
    <title>{title} — NIB Labs</title>

    <!-- JSON-LD schema.org Product (SEO base) -->
    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Product',
        name: title,
        description,
        brand: { '@type': 'Brand', name: 'NIB Labs' },
        category: 'Software',
      })}
    </script>
  </head>
  <body class="min-h-screen bg-brand-bg text-brand-text antialiased">
    <!-- Navbar -->
    <header class="sticky top-0 z-50 border-b border-white/5 bg-brand-bg">
      <nav class="mx-auto flex h-16 max-w-content items-center justify-between px-4 sm:px-6 lg:px-8">
        <a href="/" class="flex items-center gap-2 font-display text-xl">
          <span class="inline-block h-3 w-3 rounded-full bg-brand-primary"></span>
          <span>NIB Labs</span>
        </a>
        <ul class="flex items-center gap-6 text-sm text-brand-text/90">
          <li><a class="hover:text-white" href="/">Home</a></li>
          <li><a class="hover:text-white" href="/products">Products</a></li>
          <li><a class="hover:text-white" href="/services">Services</a></li>
          <li><a class="hover:text-white" href="/about">About</a></li>
          <li><a class="hover:text-white" href="/contact">Contact</a></li>
        </ul>
      </nav>
    </header>

    <!-- Hero con spazi ridotti al minimo -->
    <section class="relative isolate">
      <div class="mx-auto max-w-content px-4 py-4 text-center">
        <h1 class="font-display text-3xl sm:text-4xl font-bold text-brand-primary">
          {heroTitle}
        </h1>
        {heroSubtitle && (
          <p class="mt-2 text-base text-brand-secondary">{heroSubtitle}</p>
        )}
      </div>
    </section>

    <!-- Contenuto -->
    <main id="learn-more" class="mx-auto max-w-content px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="mt-12 border-t border-white/5">
      <div class="mx-auto flex max-w-content flex-col items-center justify-between gap-4 px-4 py-6 sm:flex-row sm:px-6 lg:px-8">
        <p class="text-sm text-brand-muted">© 2025 NIB Labs. All rights reserved.</p>
        <nav class="text-sm">
          <a href="/cookie-policy" class="hover:text-white">Cookie Policy</a>
        </nav>
      </div>
    </footer>
  </body>
</html>
