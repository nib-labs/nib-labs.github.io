---
const { title, subtitle } = Astro.props;
---
<section class="py-10">
  {title && (
    <h2 class="font-display text-2xl font-bold text-brand-primary">{title}</h2>
  )}
  {subtitle && (
    <p class="mt-2 text-brand-muted w-full">{subtitle}</p>
  )}
  <div class="mt-6">
    <slot />
  </div>
</section>
