---
import Button from './Button.astro';
const { title, subtitle } = Astro.props;
---
<section class="relative isolate">
  <div class="mx-auto grid max-w-content gap-8 px-4 py-20 sm:py-28 lg:py-32">
    <div class="text-center">
      <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-brand-primary">
        {title}
      </h1>
      <p class="mt-4 text-lg text-brand-secondary">
        {subtitle}
      </p>
      <div class="mt-8 flex items-center justify-center gap-4">
        <Button href="/products" >Explore Products</Button>
        <Button href="/services" variant="secondary">Explore Services</Button>
      </div>
    </div>
  </div>
</section>